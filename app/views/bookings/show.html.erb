<div class="container mt-5">
  <h1>Booking Details</h1>
    <ul>
      <li>Flat Name: <%= @booking.flat.name %></li>
      <li>No. Of Guests: <%= @booking.number_of_guests %></li>
      <li>Booked By: <%= @booking.user.first_name %></li>
      <li>Check-in Date: <%= @booking.start_date.to_date %></li>
      <li>Check-out Date: <%= @booking.end_date.to_date %></li>
      <li>Booking Status: <%= @booking.status %></li>
    </ul>
    <% if @booking.flat.user == current_user %>
      <%= link_to 'edit', edit_booking_path(@booking), class: 'btn btn-flat' %>
    <% end %>
</div>
