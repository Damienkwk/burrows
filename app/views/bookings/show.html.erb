<div class="container mt-5">
  <h1>Booking Details</h1>
    <ul>
      <li>Flat Name: <%= @booking.flat.name %></li>
      <li>No. Of Guests: <%= @booking.number_of_guests %></li>
      <li>Booked By: <%= @booking.user.first_name %></li>
      <li>Check-in Date: <%= @booking.start_date.to_date %></li>
      <li>Check-out Date: <%= @booking.end_date.to_date %></li>
      <li>Booking Status: <%= @booking.status %></li>
      <li>Host: <%= @booking.flat.user.first_name %></li>
      <li>Rating:
        <% @total = 0 %>
        <% @count = 0 %>
        <% @booking.reviews.each do |review| %>
          <% if review.title == 'owner' %>
            <% @total = @total + review.rating %>
            <% @count = @count + 1 %>
          <% end %>
        <% end %>
        <%= @total/@count.to_f %> ⭐️
      </li>
    </ul>
    <%= link_to 'add reviews', new_booking_review_path(@booking), class: 'btn-ghost' %>
    <% if policy(@booking).edit? %>
      <%= link_to 'edit', edit_booking_path(@booking), class: 'btn-ghost' %>
    <% end %>
    <%= link_to 'back', bookings_path, class: 'btn-ghost' %>
</div>
