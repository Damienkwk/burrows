<div class="container">

  <div class="row">

    <div class="col"></div>

    <div class="col-8">
      <h1>Add Amenities</h1>

      <%= simple_form_for [@flat, @flat_amenity] do |f| %>
        <%= f.association :amenity, label: false, as: :check_boxes, include_hidden: false, wrapper_html: { class: 'checkboxes' }, input_html: { class: 'checkbox' } %>
        <%= f.button :submit, class: "btn-ghost" %>
      <% end %>
    </div>

    <div class="col"></div>
  </div>

</div>
