<div class="container">
  <p class="hosting-link"><%= link_to 'Airbnb your home', new_flat_path, class: "btn-ghost" %></p>
  <div class="cards">
    <% @flats.each do |flat| %>
      <div class="card">
        <a href=<%= flat_path(flat)%>><%= cl_image_tag flat.photos.first.key, height: 300, width: 300, crop: :fill, class: "card-photo" %></a>

