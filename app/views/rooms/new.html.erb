<div class="container">
  <div class="rooms">
    <div class="add-room">
    <h1><%= @flat.name %></h1>
    <h3>Sleeping arrangements</h3>
    <p>Room <%= @flat.rooms.length + 1 %></p>
    <%= simple_form_for ([@flat, @room]) do |f| %>
      <%= f.input :name, label: "Type", as: :radio_buttons, collection: ["Bedroom", "Living Room"] %>
      <%= f.button :submit, class: "btn-ghost"%>
    <% end %>
    <br>
    <%= link_to "+ Add another room", new_flat_room_path(@flat) %>
    </div>


  </div>
</div>
